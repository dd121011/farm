                        android:layout_height="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/common_partition_h_live"
                        android:src="@drawable/partition_h_line" />
                </LinearLayout>
            </LinearLayout>
            

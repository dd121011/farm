                        android:id="@+id/ImageView_destination_pic"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@string/detail_favorites"
                        android:src="@drawable/home_placeholder_pic" />

                    <LinearLayout
                        android:id="@+id/ListView_right"
                        android:layout_width="220dp"
                        android:layout_height="80dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/ListView_destination_name"
                            android:layout_width="fill_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:text="青龙峡"
                            android:textSize="12sp" />

                        <RatingBar
                            android:id="@+id/ratingBar_destination_sroce"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:numStars="5"
                            android:rating="4" />

                        <TextView
                            android:id="@+id/ListView_destination_price"
                            android:layout_width="120dp"
                            android:layout_height="25dp"
                            android:paddingLeft="10dp"
                            android:text="门票：￥20"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:contentDescription="@string/common_partition_h_live"
                        android:src="@drawable/partition_h_line" />
                </LinearLayout>
            </LinearLayout>

            <!-- 地址 -->
            <LinearLayout
                android:id="@+id/LinearLayout_detail_map"
                android:layout_width="fill_parent"
                android:layout_height="30dp"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 更多页面 title -->
    <LinearLayout
        android:id="@+id/toppanel"
        android:layout_width="fill_parent"
        android:layout_height="40dp" 
        android:background="@drawable/home_top">

        <TextView
            android:id="@+id/TextView_home_title"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="@string/common_more"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:layout_below="@+id/toppanel"
        android:layout_above="@+id/Layout_home_panelBottom"
        android:background="#EEEEEE" >
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:scrollbars="vertical"
	        android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
	        android:background="@drawable/activity_more_bg">
	        
	        <!-- 更新本地数据 -->
	        <RelativeLayout
                android:id="@+id/Layout_more_update_data"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView_more_update_data"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/more_update_data"
                    android:src="@drawable/more_update_data" />

                <TextView
                    android:id="@+id/TextView_more_update_data"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40dp"
                    android:text="@string/more_update_data"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/common_arrows"
                    android:src="@drawable/home_right_arrows" />
            </RelativeLayout>
            
            <!--画横线
	        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
		        android:paddingLeft="20dp"
		        android:paddingRight="20dp"
                android:orientation="vertical" >
		        <View 
		            android:layout_height="1dp" 
		            android:background="#000000" 
		            android:layout_width="fill_parent">
		        </View>
	        </RelativeLayout>
	        -->

            <!-- 清空本地缓存 -->
	        <RelativeLayout
                android:id="@+id/Layout_more_clear_data"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView_more_clear_data"
                    android:layout_width="14dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:contentDescription="@string/more_clear_data"
                    android:src="@drawable/more_clear_data" />
                
                <!-- 
                <ProgressBar
                    android:id="@+id/Progress_more_clear_data"
				    android:layout_width="20dp"
                    android:layout_height="20dp" 
                    style="?android:attr/progressBarStyleSmall" 
				    android:indeterminateDrawable="@drawable/more_loading2"/>
                -->

                <TextView
                    android:id="@+id/TextView_more_clear_data"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40dp"
                    android:text="@string/more_clear_data"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/common_arrows"
                    android:src="@drawable/home_right_arrows" />
            </RelativeLayout>
	    </LinearLayout>
	    
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:scrollbars="vertical"
	        android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
	        android:background="@drawable/activity_more_bg">
	        
	        <!-- 更新版本 -->
	        <RelativeLayout
                android:id="@+id/Layout_more_update_version"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView_more_update_version"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:contentDescription="@string/more_update_version"
                    android:src="@drawable/more_update_version" />

                <TextView
                    android:id="@+id/TextView_more_update_version"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40dp"
                    android:text="@string/more_update_version"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/common_arrows"
                    android:src="@drawable/home_right_arrows" />
            </RelativeLayout>
            
            <!-- 免责声明 -->
	        <RelativeLayout
                android:id="@+id/Layout_more_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView_more_disclaimer"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:contentDescription="@string/more_disclaimer"
                    android:src="@drawable/more_disclaimer" />

                <TextView
                    android:id="@+id/TextView_more_disclaimer"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40dp"
                    android:text="@string/more_disclaimer"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/common_arrows"
                    android:src="@drawable/home_right_arrows" />
            </RelativeLayout>
            
            <!-- 建议反馈 -->
	        <RelativeLayout
                android:id="@+id/Layout_more_feedback_to_us"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView_more_advise_to_us"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:contentDescription="@string/more_advise_to_us"
                    android:src="@drawable/more_advise_to_us" />

                <TextView
                    android:id="@+id/TextView_more_advise_to_us"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40dp"
                    android:text="@string/more_advise_to_us"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/common_arrows"
                    android:src="@drawable/home_right_arrows" />
            </RelativeLayout>
            
	        <!--联系我们 -->
	        <RelativeLayout
                android:id="@+id/Layout_more_contact_us"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView_more_contact_to_us"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:contentDescription="@string/more_contact_to_us"
                    android:src="@drawable/more_contact_to_us" />

                <TextView
                    android:id="@+id/TextView_more_contact_to_us"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40dp"
                    android:text="@string/more_contact_to_us"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/common_arrows"
                    android:src="@drawable/home_right_arrows" />
            </RelativeLayout>
            <!-- 关于我们 -->
	        <RelativeLayout
                android:id="@+id/Layout_more_about_us"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/home_bg"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/ImageView_more_about_us"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:contentDescription="@string/more_about_us"
                    android:src="@drawable/more_about_us" />

                <TextView
                    android:id="@+id/TextView_more_about_us"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="40dp"
                    android:text="@string/more_about_us"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/common_arrows"
                    android:src="@drawable/home_right_arrows" />
            </RelativeLayout>
	    </LinearLayout>
	    
    </LinearLayout>
    
    <!-- 底部工具栏 -->
    <include
        android:id="@+id/Layout_home_panelBottom"
        layout="@layout/footer"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:baselineAligned="false" 
    android:background="@drawable/home_bottom"
    android:gravity="center_horizontal" >
<RelativeLayout
        android:id="@+id/Layout_home_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1.0"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ImageView_home_main"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/common_reserve"
            android:src="@drawable/home_home" />

        <TextView
            android:id="@+id/TextView_panelBottom_home_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/common_home"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Layout_home_panelBottom_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1.0"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ImageView_home_home"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/common_reserve"
            android:src="@drawable/home_home" />

        <TextView
            android:id="@+id/TextView_panelBottom_home_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/common_reserve"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout_home_panelBottom_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ImageView_home_checkin"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/common_order"
            android:src="@drawable/home_checkin" />

        <TextView
            android:id="@+id/TextView_panelBottom_home_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/common_order"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout_home_panelBottom_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ImageView_home_my"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/common_my"
            android:src="@drawable/home_my" />

        <TextView
            android:id="@+id/TextView_panelBottom_home_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/common_my"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Layout_home_panelBottom_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.0"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/ImageView_home_more"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/common_more"
            android:src="@drawable/home_more" />

        <TextView
            android:id="@+id/TextView_panelBottom_home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="@string/common_more"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ListView_1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

     <LinearLayout
                android:id="@+id/ListView_child"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ListView_chlid_name"
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="大兴西瓜节"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/ListView_child_time"
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp" >

                    <TextView
                        android:id="@+id/ListView_child_start"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:text="开始时间：2012-10-14"
                        android:textSize="10sp" />
                    
                    <TextView
                        android:id="@+id/ListView_child_end"
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:text="结束时间：2012-10-14"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="220dp"
                    android:layout_height="20dp" >

                    <TextView
                        android:id="@+id/ListView_chlid_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="大兴西瓜节"
                        android:textSize="8sp" />
                </LinearLayout>
            </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:contentDescription="@string/common_partition_h_live"
            android:src="@drawable/partition_h_line" />
    </LinearLayout>

</LinearLayout>